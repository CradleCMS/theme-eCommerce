<div class="card shrink-0 w-full max-w-m {{ settings.general_shadow }}">
    {% form 'contact' class:'card-body' %}
        <h3 class="text-center">Say hallo!</h3>
        {% if form.errors %}
            <div class="alert alert-error">
                <span>Sorry, looks like something went wrong, please try again.</span>
            </div>
        {% endif %}
        {% if form.success %}
            <div class="alert alert-success">
                <span>Thank you for the message, we will contact you shortly!</span>
            </div>
        {% else %}
        <input type="text" name="name" class="grow" placeholder="Name" value="{{form.name}}" required/>
        <input type="email" name="email" class="grow" value="{% if customer %}{{ customer.email }}{% else %}{{ form.email }}{% endif %}" placeholder="Email" autocorrect="off" autocapitalize="off" required />
        <textarea placeholder="Message" name="message" rows="4" class="textarea textarea-bordered{% if form.errors contains 'message' %} textarea-error{% endif %} textarea-lg" required >{{form.message}}</textarea>
        <input type="submit" name="submit" class="btn btn-primary" value="Submit">
        {% endif %}
    {% endform %}
</div>
