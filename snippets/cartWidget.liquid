<div class="dropdown dropdown-end">
  <div tabindex="0" role="button" class="btn btn-sm btn-circle">
        <div class="indicator">
            <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor">
                <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
                />
            </svg>
        {% if cart.quantity > 0 %}
          <div class="badge badge-sm indicator-item badge-secondary w-4 h-4" :class="{'w-8': 9 < {{cart.quantity}} }">{{cart.quantity}}</div>
        {% endif %}
        </div>
  </div>
  <ul class="menu dropdown-content bg-base-200 rounded-box z-[1] w-60 p-2 pb-4 shadow-sm text-base-content">
    {% if cart.items.size > 0 %}
        {% for item in cart.items %}
        {% if item.quantity > 0 %}
        <div class="p-1">
            {% let vt = item.title | split:'|' %}
            <div class="flex items-center h-8">
                <img src="{{item | product_img_url:'thumb'}}" class="rounded object-scale-down max-h-full w-8 mr-2"/>
                <h3 class="text-base-content">{{vt | first}}
                {% if vt.size > 1 %}
                <p class="text-xs -mt-1">
                    <em>{{ vt | slice:1 | join}}</em>
                </p> 
                {% endif %}
                </h3>
            </div>
            <div class="grid grid-cols-3 items-center">
                <em class="col-span-2 ml-10 text-xs">{{ item.price | money }}&times;{{ item.quantity }}</em>
                <div class="max-w-20 text-right">
                    {{ item.price | times:item.quantity | money }}
                </div>
            </div>
        </div>
        {% endif %}
        {% endfor %}
        <div class="flex p-1 border-t mt-2">
            <em>Subtotal</em> 
            <div class="ml-auto font-bold">{{cart.amount.total | money}}</div>
        </div>
        <li class="card-actions mt-2">
            <a href="/cart" class="btn btn-sm btn-secondary btn-block">View cart</a>
            <a href="/checkout" class="btn btn-sm btn-primary btn-block">Pay now</a> 
        </li>
    {% else %}
        <li>
            <h2>Your cart is empty</h2>
        </li>
    {% endif %}
  </ul>

</div>
