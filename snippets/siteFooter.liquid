<div class="bg-{{ settings.footer_colors }} text-{{ settings.footer_colors }}-content">
    <footer class="footer md:footer-horizontal lg:footer-horizontal px-4 py-10 max-w-8xl mx-auto container justify-items-center">
      <aside class="justify-self-start flex flex-col md:flex-row lg:flex-col gap-8">
        {% if settings.footer_image %}
            <img class="justify-self-start" src="{{ settings.footer_image_src | asset_img_url:'300','0' }}" alt="{{ settings.footer_image_alt | t:'default' }}">
        {% endif %}
        <div class="flex flex-col gap-4 max-w-lg">
        {% unless settings.footer_about_shop == empty %}
            <p class="font-bold">
              {{ settings.footer_about_shop | t:'default' }}
            </p> 
        {% endunless %}
        {% if settings.footer_social_enable %}
          <div class="grid grid-flow-col gap-4">
            {% include 'socialmedia-icon-links' %}
          </div>
        {% endif %}
        </div>
      </aside> 
	  {% if settings.footer_quicklinks_enable %}
        {% for linkList in settings.footer_linklists %}
          <nav>
            <header class="footer-title">{{ linkList.footer_linklist_title }}</header> 
            {% for link in navigation[linkList.footer_linklist].links %}
            <a class="link link-hover" href="{{ link | url }}">{{ link.title }}</a>
            {% endfor %}
          </nav> 
        {% endfor %}
      {% endif %}
      <div class="place-self-stretch grid place-items-center">
        {% if settings.footerButtonEnabled %}<a href="{{ settings.footerButtonURL }}" class="btn btn-lg btn-primary">{{ settings.footerButtonText | t:'default' }}</a>{% endif %}
      </div>
         {% if settings.footer_payment_enable %}
        <div class="mt-8 flex flex-col items-center gap-4" aria-label="Accepted payment methods">
          <p class="font-semibold">
            {{ settings.footer_payment_text | t:'default' }}
          </p>

          <ul class="flex flex-wrap gap-4 list-none p-0 m-0">
            {% for method in settings.footer_payment_methods %}
              {% if method.logo %}
                <li>
                 <img
  src="{{ method.logo | asset_img_url:'120','0' }}"
  alt="{{ method.alt }}"
  loading="lazy"
  class="w-auto object-contain opacity-90"
  style="height: 22px;"
>




                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </footer>
    <footer class="footer-horizontal p-2 pb-4 max-w-8xl mx-auto container">
        <p class="text-sm">{{ 'Copyright &copy;' | t:'default' }} {{ site.name }} - {{ 'All rights reserved' | t:'default'}}</p>
    </footer>
</div>
