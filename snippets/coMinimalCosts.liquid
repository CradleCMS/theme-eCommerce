{% assign x = form.subTotal %}
{% assign y = form.totalVAT %}
{% assign totalProducts = x | plus:y %}
<fieldset class="px-4 mb-4">
    <div class="flex flex-row">
        <p>Items total</p>
        <div class="ml-auto">{{ totalProducts | money }}</div>
    </div>
    {% if form.shipping %}
    <div class="flex flex-row mt-2">
        <p>Shipping <span class="text-sm">({{ form.shipping.carrierName }})</span></p>
        <div class="ml-auto">{{ form.shipping.cost.total | money }}</div>
    </div>
    {% endif %}
    <div class="flex flex-row mt-2">
        <p class="text-lg"><span class="font-bold">Total amount </span>{% if form.totalVAT > 0 %}<span class="text-sm">(incl. VAT)</span>{% endif %}</p>
        <p class="ml-auto font-bold text-lg">{{ form.grandTotal | money }}</p>
    </div>
</fieldset>
