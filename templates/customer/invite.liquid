<section class="p-10 prose mx-auto">
    <div class="card shrink-0 w-full max-w-m {{ settings.general_shadow }} bg-base-200">
        
{% unless invite %}
    <div class="card-body text-center">
        <h1>Invite not found!</h1>
        <p class="text-xl mt-2">The invite has probably expired, already been used or deleted.</p>
      <div class="text-center mt-4">
        <a class="btn btn-sm btn-ghost" href="{{'customer/login' | url}}">Back to login</a>
      </div>
    </div>
{% else %}
    <div class="card-body text-center">
        {% form 'customer_invite' id:'customer_invite' %}
            {% include 'form-errors-custom' %}
            <div class="login-header mb-8">
              <h1 class="text-center">Account activation</h1> 
            </div>
            {% if invite.message != blank %}
            <p class="text-center">{{invite.message}}</p>
            {% endif %}
            <p class="text-sm text-center">Set a password to activate your account</p>
            <br>
            <div class="grid grid-cols-2 gap-2">
              <div class="form-control">
                <label class="text-left">Password</label>
                <input class="input" type="password" name="customer[password]" id="password" autocomplete="new-password" required/>
              </div>
              <div class="form-control">
                <label class="text-left">Confirm password</label>
                <input class="input" type="password" name="customer[password_confirmation]" id="password2" autocomplete="new-password" required/>
              </div>  
            </div>
            <p class="form-contro">
              <button class="btn btn-primary border-none text-slate-200"> 
                Activate account
              </button>
            </p>
            <input type="hidden" name="invite" value="{{invite.id}}">
            <input type="hidden" name="token" value="{{invite.token}}">
        {% endform %}
          <p class="text-center mt-4">
            <small>Already have an account with us? <a class="" href="{{'customer/login' | url}}">Account login</a></small>
          </p>
    </div>
{% endunless %}    
    
  </div>
</section>
